---
import BlankLayout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import LogoTransparent from "../assets/logo.png";
import ExampleCode1 from "../assets/example-code-1.png";
---

<BlankLayout>
  <div
    class="hero w-full py-24 flex flex-col gap-7 justify-center items-center"
  >
    <div class="hero-background-shade"></div>

    <div class="header z-20 justify-center flex">
      <div class="container">
        <div class="navbar shadow-none bg-transparent py-5">
          <div class="navbar-start w-full">
            <a href="/" class="navbar-item font-poppins font-bold">Cyrus Lang</a
            >
            <nav>
              <a class="navbar-item">Blog</a>
              <a class="navbar-item">Install</a>
              <a class="navbar-item">Sponsors</a>
              <a class="navbar-item">Community</a>
              <a class="navbar-item">Documentations</a>
            </nav>
          </div>
          <div class="navbar-end flex gap-3 w-1/3">
            <a class="navbar-item btn btn-solid-primary px-5">Donate ☕️</a>
            <a class="navbar-item btn btn-primary px-5">Get Started</a>
          </div>
          <div class="navbar-end--mobile">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              class="fill-white w-6 cursor-pointer"
              ><path
                d="M0,4c0-.55,.45-1,1-1H18c.55,0,1,.45,1,1s-.45,1-1,1H1c-.55,0-1-.45-1-1Zm18,15H1c-.55,0-1,.45-1,1s.45,1,1,1H18c.55,0,1-.45,1-1s-.45-1-1-1Zm5-8H6c-.55,0-1,.45-1,1s.45,1,1,1H23c.55,0,1-.45,1-1s-.45-1-1-1Z"
              ></path></svg
            >
          </div>
        </div>
      </div>
    </div>

    <Image
      class="hero-logo z-20"
      src={LogoTransparent}
      alt="Cyrus Logo Transparent"
    />

    <div class="hero-badges z-20 flex flex-row gap-5">
      <span
        class="badge badge-outline-primary text-[#ff8f5f] bg-[#eb7b4b] bg-opacity-25"
        >Version 0.0.1 Beta</span
      >
      <span
        class="badge badge-outline-primary text-[#ff8f5f] bg-[#eb7b4b] bg-opacity-25"
        >Made for the Future</span
      >
    </div>

    <div class="flex flex-col z-20 justify-center text-center">
      <h1 class="hero-slogan font-jersey15">
        A programming language for Aliens.
      </h1>
      <h2 class="hero-intro-text text-white">
        Built for developers who demand extraordinary performance. Inspired by
        ancient wisdom, powered by modern technology.
      </h2>
    </div>

    <div class="flexible-grid-box z-20 gap-10 justify-between mx-auto mt-8">
      <div class="flex items-center gap-2 text-sm text-white">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-cpu h-4 w-4 text-[#eb7b4b]"
          ><rect width="16" height="16" x="4" y="4" rx="2"></rect><rect
            width="6"
            height="6"
            x="9"
            y="9"
            rx="1"></rect><path d="M15 2v2"></path><path d="M15 20v2"
          ></path><path d="M2 15h2"></path><path d="M2 9h2"></path><path
            d="M20 15h2"></path><path d="M20 9h2"></path><path d="M9 2v2"
          ></path><path d="M9 20v2"></path></svg
        ><span>GCCJIT Powered</span>
      </div>
      <div class="flex items-center gap-2 text-sm text-white">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-globe h-4 w-4 text-[#eb7b4b]"
          ><circle cx="12" cy="12" r="10"></circle><path
            d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"></path><path
            d="M2 12h20"></path></svg
        ><span>Cross-Platform</span>
      </div>
      <div class="flex items-center gap-2 text-sm text-white">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-sparkles h-4 w-4 text-[#eb7b4b]"
          ><path
            d="M9.937 15.5A2 2 0 0 0 8.5 14.063l-6.135-1.582a.5.5 0 0 1 0-.962L8.5 9.936A2 2 0 0 0 9.937 8.5l1.582-6.135a.5.5 0 0 1 .963 0L14.063 8.5A2 2 0 0 0 15.5 9.937l6.135 1.581a.5.5 0 0 1 0 .964L15.5 14.063a2 2 0 0 0-1.437 1.437l-1.582 6.135a.5.5 0 0 1-.963 0z"
          ></path><path d="M20 3v4"></path><path d="M22 5h-4"></path><path
            d="M4 17v2"></path><path d="M5 18H3"></path></svg
        ><span>Zero-Cost Abstractions</span>
      </div>
      <div class="flex items-center gap-2 text-sm text-white">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-binary h-4 w-4 text-[#eb7b4b]"
          ><rect x="14" y="14" width="4" height="6" rx="2"></rect><rect
            x="6"
            y="4"
            width="4"
            height="6"
            rx="2"></rect><path d="M6 20h4"></path><path d="M14 10h4"
          ></path><path d="M6 14h2v6"></path><path d="M14 4h2v6"></path></svg
        ><span>Native Performance</span>
      </div>
    </div>

    <div class="flex flex-row z-20 gap-3 mt-5">
      <button class="btn btn-primary">
        Download Cyrus
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-arrow-right ml-2 h-4 w-4"
          ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
        >
      </button>
      <button class="btn btn-solid-primary">View Documentation</button>
    </div>
  </div>

  <div
    id="section1"
    class="flexible-grid-box justify-center overflow-hidden gap-y-12 md:gap-16 mt-12"
  >
    <div class="text-center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-10 mx-auto mb-5 fill-primary"
        viewBox="0 0 24 24"
      >
        <path
          d="M19.934,8.98c-.188-.253-.486-.402-.802-.402h-4.17l1.104-4.917c.083-.37-.05-.755-.344-.995-.084-.068-2.073-1.667-4.46-1.667-2.441,0-4.42,1.601-4.503,1.669-.167,.136-.284,.323-.336,.532L3.897,13.38c-.074,.298-.006,.614,.183,.857,.189,.242,.48,.384,.788,.384h4.023l-.865,7.261c-.04,.334,.089,.67,.35,.883,.398,.325,.836,.221,.93,.193,7.477-2.235,10.654-12.653,10.786-13.095,.09-.303,.031-.63-.157-.883Z"
        ></path>
      </svg>
      <div class="text-md md:text-xl text-white font-bold">Blazing Fast</div>
      <div class="text-sm text-gray-400">Optimized for performance</div>
    </div>

    <div class="text-center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-10 mx-auto mb-5 fill-primary"
        viewBox="0 0 24 24"
      >
        <path
          d="m16.657,10h5.293c-.398.976-.863,1.983-1.418,3h-8.117l2.121-2.121c.559-.559,1.332-.879,2.121-.879Zm-7.365,3.295l-4.697,4.696c-.958-1.251-1.513-2.754-1.585-4.371-.097-2.178.729-4.312,2.266-5.853C10.717,2.31,17.617.575,21.246.027c.763-.113,1.51.13,2.052.672.539.538.783,1.279.669,2.034-.174,1.164-.545,3.058-1.278,5.267h-6.033c-1.335,0-2.591.521-3.535,1.465l-3.827,3.827-.003.003Zm-3.28,6.108c1.363,1.064,3.003,1.604,4.665,1.604,2.109,0,4.239-.843,5.832-2.488,1.087-1.122,2.014-2.312,2.814-3.519h-8.908l-4.403,4.403Zm-1.417-1.412L.293,22.293c-.391.391-.391,1.023,0,1.414.195.195.451.293.707.293s.512-.098.707-.293l4.304-4.304c-.068-.053-1.066-.954-1.417-1.412Z"
        ></path>
      </svg>
      <div class="text-md md:text-xl text-white font-bold">Lightweight</div>
      <div class="text-sm text-gray-400">Minimal runtime overhead</div>
    </div>

    <div class="text-center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-10 mx-auto mb-5 fill-primary"
        viewBox="0 0 24 24"
      >
        <path
          d="M24,3v2c0,1.657-1.343,3-3,3h-1v1c0,1.657-1.343,3-3,3h-4v3.395s1.295-1.294,1.295-1.294c.391-.391,1.023-.391,1.414,0s.391,1.023,0,1.414l-2.475,2.476c-.34,.34-.786,.51-1.232,.51s-.892-.17-1.231-.51l-2.476-2.476c-.391-.391-.391-1.023,0-1.414s1.023-.391,1.414,0l1.292,1.292v-3.394H7c-1.657,0-3-1.343-3-3v-1h-1c-1.657,0-3-1.343-3-3V3C0,1.343,1.343,0,3,0H7c1.657,0,3,1.343,3,3v2c0,1.657-1.343,3-3,3h-1v1c0,.552,.448,1,1,1h10c.552,0,1-.448,1-1v-1h-1c-1.657,0-3-1.343-3-3V3c0-1.657,1.343-3,3-3h4c1.657,0,3,1.343,3,3Zm-3,12h-3.018c-.045,.703-.323,1.394-.859,1.93l-2.38,2.381c-.56,.56-1.262,.987-2.042,1.127-1.254,.225-2.476-.163-3.345-1.033l-2.476-2.476c-.536-.536-.814-1.227-.859-1.93H3c-1.657,0-3,1.343-3,3v3c0,1.657,1.343,3,3,3H21c1.657,0,3-1.343,3-3v-3c0-1.657-1.343-3-3-3Z"
        ></path>
      </svg>
      <div class="text-md md:text-xl text-white font-bold">
        Seamless Integration
      </div>
      <div class="text-sm text-gray-400">Works seamlessly with C/C++</div>
    </div>

    <div class="text-center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-10 mx-auto mb-5 fill-primary"
        viewBox="0 0 24 24"
        ><path
          d="M2.751,15H0V14A7.634,7.634,0,0,1,4.065,7.169a10.975,10.975,0,0,1,3.9-1.09q-.889,1.1-1.783,2.338A40.582,40.582,0,0,0,2.751,15Zm12.832,2.813A40.582,40.582,0,0,1,9,21.249V24h1a7.634,7.634,0,0,0,6.831-4.065,10.975,10.975,0,0,0,1.09-3.9Q16.826,16.92,15.583,17.813ZM24,2.991c-.133,4.353-3.267,8.67-9.582,13.2A34.995,34.995,0,0,1,9,19.063V18.5A3.517,3.517,0,0,0,5.5,15H4.937A34.912,34.912,0,0,1,7.813,9.583C12.332,3.278,16.642.144,20.988,0,23.154,0,24,.885,24,2.991ZM18,8.5a2.5,2.5,0,0,0-5,0A2.5,2.5,0,0,0,18,8.5ZM1.374,23.785c1.126-.2,3.841-.758,4.748-1.664h0a3,3,0,0,0-4.243-4.243C.973,18.785.414,21.5.215,22.626l-.247,1.406Z"
        ></path></svg
      >
      <div class="text-md md:text-xl text-white font-bold">
        Limitless Potential
      </div>
      <div class="text-sm text-gray-400">Unlock endless possibilities</div>
    </div>
  </div>

  <div
    id="section2"
    class="section-container justify-center mx-auto mt-20 flex gap-10"
  >
    <div class="mt-10 w-full">
      <h1 class="text-2xl font-bold mb-4">Ancient Wisdom, Modern Power</h1>
      <p class="text-gray-400 leading-10">
        Cyrus is a cutting-edge programming language built on a foundation of
        elegant engineering principles. It's ideal for web applications, game
        development, and AI/ML algorithms.
      </p>

      <div class="flex flex-row gap-3 mt-6">
        <button class="btn btn-primary">Explore Documentation</button>
        <button class="btn btn-solid-primary">Explore Documentation</button>
      </div>
    </div>
    <Image
      class="border-2 border-primary rounded-xl"
      src={ExampleCode1}
      alt="Example Cyrus Code"
    />
  </div>

  <hr class="section-separator mt-12 mb-8" />

  <div class="w-full py-10 text-center flex flex-col justify-center">
    <h1 class="font-bold text-5xl mb-5">Ready to Begin Your Journey?</h1>
    <span class="text-gray-400"
      >Join the community of developers building the future with Cyrus.</span
    >
    <button class="btn btn-primary mx-auto px-7 mt-8 w-max"
      >Join Commiunity</button
    >
  </div>

  <hr class="section-separator mt-8 mb-8" />
</BlankLayout>

<style lang="scss">
  #section2 {
    flex-direction: row;
    overflow: hidden;
    @media screen and (max-width: 1300px) {
      & {
        flex-direction: column;
      }

      img {
        width: 100%;
      }
    }
    p {
      max-width: 90%;
    }
  }

  .hero {
    position: relative;
    background-image: url(../assets/hero-background.webp);
    background-size: cover;
    background-repeat: no-repeat;

    .header {
      position: absolute;
      top: 0;
      width: 100%;
    }

    .hero-background-shade {
      width: 100%;
      height: 100%;
      position: absolute;
      z-index: 5;
      background: rgb(20, 10, 5);
      background: linear-gradient(
        0deg,
        rgba(20, 10, 5, 0.596) 0%,
        rgba(20, 10, 5, 1) 100%
      );
    }

    .hero-logo {
      width: 180px;
      display: block;
      margin-top: 40px;
      @media screen and (max-width: 900px) {
        & {
          width: 120px;
        }
      }
    }
    .hero-badges {
      position: relative;
      bottom: -35px;

      @media screen and (max-width: 900px) {
        & {
          bottom: -25px;
        }
      }
    }
    .hero-intro-text {
      width: 700px;
      margin-left: auto;
      margin-right: auto;
      font-size: 18px;
      @media screen and (max-width: 1200px) {
        & {
          max-width: 80%;
          padding: 0 40px;
          font-size: 16px;
        }
      }
      @media screen and (max-width: 900px) {
        & {
          font-size: 14px;
        }
      }
    }
    .hero-slogan {
      max-width: 1100px;
      font-size: 72px;
      background: rgb(245, 245, 245);
      background: linear-gradient(90deg, #f5f5f5 0%, #eb7b4b 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;

      @media screen and (max-width: 1200px) {
        & {
          font-size: 52px;
        }
      }

      @media screen and (max-width: 900px) {
        & {
          font-size: 6.5vw;
        }
      }
    }
  }
</style>
